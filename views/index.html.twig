{% include 'header.html.twig' %}

  <div class="row">
    <div class="col-md-6">
      <h2>All stylists:</h2>
      {% if results is not empty %}
        {% for result in results %}
          <li><a href="/stylist/{{ result.id }}">{{ result.name }}</a></li>
        {% endfor %}
      {% endif %}

      <form action="/stylist" method="post">
        <label for="stylist">Add A Stylist</label>
        <input id="stylist" name="stylist" type="text">
        <button class="btn bg-success" type="submit">Add</button>
      </form>

      <form action="/delete_stylist" method="post">
        <label for="stylist">Delete a stylist with ALL his/hers clients</label>
        <input id="stylist" name="stylist" type="text">
        <button class="btn bg-danger" type="submit">delete</button>
      </form>
    </div>

    <div class="col-md-6">
      <h2>Here we serve {{ total }} custmers</h2>
      {% if clients is not empty %}
        <h2>New customers:</h2>
        {% for client in clients %}
          <li><a href="/client/{{ client.id }}">{{ client.name }}</a>: {{ client.enroll_date }}</li>
        {% endfor %}

      {% endif %}
    </div>

  </div>


{% include 'footer.html.twig' %}
