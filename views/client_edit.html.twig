{% include 'header.html.twig' %}

  <h2>Update {{ client.getName }}</h2>

  <form action="/client/{{ client.getId }}" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">New Name:</label>
    <input name="name" type="text" placeholder="{{ client.getName }}">
    <label for="gender">New Gender:</label>
    <input name="gender" type="text" placeholder="{{ client.getGender }}">
    <label for="age">New Age:</label>
    <input name="age" type="number" placeholder="{{ client.getAge }}">
    <label for="address">New Address:</label>
    <input name="address" type="text" placeholder="{{ client.getAddress }}">

    <button type="submit" class="btn bg-warning">Update</button>
  </form>

  <form action="/client/{{ client.getId }}" method="post">
    <input name="_method" type="hidden" value="delete">
    <button type="submit" class="btn bg-danger">Delete {{ client.getName }}</button>
  </form>


